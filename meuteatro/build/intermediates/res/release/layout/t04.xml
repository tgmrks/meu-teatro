<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayoutMeusTeatro"
    android:layout_width="match_parent"
    android:background="#ffe7e7e7"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff4d4d4d"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:id="@+id/tableRow"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strMeusTeatros"
            android:id="@+id/txtMeusTeatros"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:singleLine="false"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/listViewMeusTeatros"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnAddTeatro"
        android:layout_below="@+id/tableRow">
    </ListView>

    <Button
        android:id="@+id/btnAddTeatro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/stringAddTeatro2"
        android:layout_alignParentBottom="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffffff"
        android:background="#ff4d4d4d"
        android:singleLine="false" />

</RelativeLayout>
